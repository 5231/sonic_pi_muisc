use_bpm 160
use_synth :saw

live_loop :main_theme do
  with_fx :distortion do
    play :c2
    sleep 0.5
    play :e2
    sleep 0.5
    play :g2
    sleep 0.5
    play :b2
    sleep 0.5
    play :c3
    sleep 0.5
    play :b2
    sleep 0.5
    play :g2
    sleep 0.5
    play :e2
    sleep 0.5
  end
end

live_loop :drums do
  sleep 2
  sample :bd_808, amp: 100
  sleep 3.5
  sample :bd_808, amp: 100, sustain: 0.25
  sleep 0.5
  sample :bd_808, amp: 100
  sleep 2
end
