use_bpm 160
use_synth :saw

live_loop :main_theme do
  play :c2, amp: 3
  sleep 0.5
  play :e2, amp: 3
  sleep 0.5
  play :g2, amp: 3
  sleep 0.5
  play :b2, amp: 3
  sleep 0.5
  play :c3, amp: 3
  sleep 0.5
  play :b2, amp: 3
  sleep 0.5
  play :g2, amp: 3
  sleep 0.5
  play :e2, amp: 3
  sleep 0.5
end
